.main{
  margin-bottom: 50px;
}
.h1 image {
  width: 100%;
  height: auto;
}

.tell {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.7);
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
}

.tell button[size='mini'] {
  background-color: rgba(180, 20, 20, 1);
  border-radius: 20px;
  font-size: 18px;
  height: 40px;
  line-height: 40px;
  margin: 0 40px;
  width: 80%;
  font-weight: bold;
  text-align: center;
  color: #fff8f8;
}
